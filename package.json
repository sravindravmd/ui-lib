{
  "name": "@ravindra/ui-lib",
  "version": "1.2.3",
  "description": "Fabric: Shared Copilot UI Library",
  "main": "dist/index.js",
  "repository": {
    "type": "git",
    "url": "git+https://bitbucket.org/ydv-all/copilot-ui.git"
  },
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "lint": "eslint ./src",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "prepublish": "npm -s run build",
    "test": "jest --passWithNoTests",
    "test:watchAll": "jest --watchAll",
    "coverage": "npm run test -- --coverage",
    "test:coverage": "npm run test -- --coverage",
    "coverage:open": "open ./coverage/lcov-report/index.html",
    "build": "rm -rf dist && NODE_ENV=production babel src -d dist --copy-files && del dist/**/*.test.js dist/**/*.stories.js dist/**/__snapshots__",
    "release": "np"
  },
  "author": "Fabric",
  "license": "IST",
  "dependencies": {
    "@storybook/addon-viewport": "^6.1.6",
    "date-fns": "^2.16.1",
    "file-loader": "^6.1.1",
    "jest": "^26.6.3",
    "prop-types": "^15.7.2",
    "react-datepicker": "^3.3.0",
    "uuid": "^8.3.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.12.8",
    "@babel/core": "^7.12.8",
    "@babel/preset-env": "^7.12.7",
    "@babel/preset-react": "^7.12.7",
    "@storybook/addon-actions": "^6.1.4",
    "@storybook/addon-docs": "^6.1.5",
    "@storybook/addon-essentials": "^6.1.4",
    "@storybook/addon-links": "^6.1.4",
    "@storybook/addon-storysource": "^6.1.4",
    "@storybook/react": "^6.1.4",
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.1.0",
    "@testing-library/user-event": "^12.1.10",
    "babel-eslint": "^10.1.0",
    "babel-loader": "^8.2.1",
    "classnames": "^2.2.6",
    "del-cli": "^3.0.1",
    "eslint": "^7.14.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.21.5",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-sonarjs": "^0.5.0",
    "husky": "^4.3.0",
    "jest-fetch-mock": "^3.0.3",
    "jest-sonar-reporter": "^2.0.0",
    "lint-staged": "^10.4.0",
    "node-sass": "^4.14.1",
    "prettier": "^2.1.2",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-is": "^17.0.1",
    "react-test-renderer": "^17.0.1",
    "sass-loader": "^10.0.2",
    "style-loader": "^1.3.0",
    "styled-components": "^5.2.1",
    "url-loader": "^4.1.0",
    "webpack": "^4.44.2",
    "webpack-cli": "^3.3.12"
  },
  "peerDependencies": {
    "classnames": ">=2.0.0",
    "react": ">=16.9.0",
    "react-dom": ">=16.9.0",
    "react-is": ">=16.9.0",
    "styled-components": ">=5.0.0"
  },
  "standard": {
    "parser": "babel-eslint"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.+(js|jsx)": [
      "eslint --fix",
      "jest --bail --findRelatedTests",
      "git add"
    ],
    "*.+(json|css|md)": [
      "prettier --write",
      "git add"
    ]
  }
}
